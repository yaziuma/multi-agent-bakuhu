# Default: LF for all text files
* text=auto eol=lf

# Shell scripts must use LF
*.sh text eol=lf

# Python scripts must use LF
*.py text eol=lf

# YAML files must use LF
*.yaml text eol=lf
*.yml text eol=lf

# Markdown files must use LF
*.md text eol=lf

# JSON files must use LF
*.json text eol=lf

# TOML files must use LF
*.toml text eol=lf

# Windows batch files must use CRLF
*.bat text eol=crlf
